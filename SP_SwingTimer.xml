<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
	<Script file="SP_SwingTimer.lua"/>
	<Frame name="SP_ST_Updater" parent="UIParent">
		<Scripts>
			<OnLoad>
				SP_ST_OnLoad()
			</OnLoad>
			<OnUpdate>
				SP_ST_OnUpdate(arg1)
			</OnUpdate>
			<OnEvent>
				SP_ST_OnEvent()
			</OnEvent>
		</Scripts>	
	</Frame>	
	
	<Frame name="SP_ST_Frame" parent="UIParent" hidden="true">
		<Scripts>
			<OnDragStart>
				self:StartMoving()
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing()
			</OnDragStop>
		</Scripts>

		<Size>
			<AbsDimension x="200" y="10" />
		</Size>

		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background">
		</Backdrop>

		<Layers>
			<Layer level="ARTWORK">
				<Texture name="SP_ST_mainhand">
					<Size>
						<AbsDimension x="10" y="10" />
					</Size>
					<Anchors>
						<Anchor point="LEFT">
						</Anchor>
					</Anchors>
				</Texture>
				<Texture name="SP_ST_FrameTime">
					<Size>
						<AbsDimension x="200" y="10" />
					</Size>
					<Anchors>
						<Anchor point="CENTER">
						</Anchor>
					</Anchors>
				</Texture>
				<FontString name="SP_ST_maintimer" justifyH="RIGHT" justifyV="MIDDLE">
				</FontString>
			</Layer>
		</Layers>
	</Frame>
	<Frame name="SP_ST_FrameOFF" parent="UIParent" hidden="true">
		<Size>
			<AbsDimension x="200" y="10" />
		</Size>

		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background">
		</Backdrop>

		<Layers>
			<Layer level="ARTWORK">
				<Texture name="SP_ST_offhand">
					<Size>
						<AbsDimension x="10" y="10" />
					</Size>
					<Anchors>
						<Anchor point="LEFT">
						</Anchor>
					</Anchors>
				</Texture>
				<Texture name="SP_ST_FrameTime2">
					<Size>
						<AbsDimension x="200" y="10" />
					</Size>
					<Anchors>
						<Anchor point="CENTER">
						</Anchor>
					</Anchors>
				</Texture>
				<FontString name="SP_ST_offtimer" justifyH="RIGHT" justifyV="MIDDLE">
				</FontString>
			</Layer>
		</Layers>
	</Frame>
</Ui>
